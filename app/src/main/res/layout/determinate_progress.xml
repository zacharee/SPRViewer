<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <com.hmomeni.progresscircula.ProgressCircula
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:pgc_indeterminate="false"
        app:pgc_rimColor="?colorAccent"
        app:pgc_rimWidth="8dp"
        app:pgc_speed="1.0"
        app:pgc_textColor="@android:color/white"
        tools:pgc_progress="10"
        />

    <TextView
        android:id="@+id/file_fraction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tools:text="800/900"
        />

    <TextView
        android:id="@+id/base_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tools:text="some_filename"
        />

    <TextView
        android:id="@+id/filename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tools:text="some_filename.some_extension"
        />

    <ProgressBar
        android:id="@+id/sub_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:progress_current="50"
        />

</LinearLayout>