<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.hmomeni.progresscircula.ProgressCircula
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/filename"
        app:pgc_indeterminate="false"
        app:pgc_rimColor="?colorAccent"
        app:pgc_rimWidth="8dp"
        app:pgc_textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/filename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/sub_progress"
        tools:text="some_filename"
        />

    <ProgressBar
        android:id="@+id/sub_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>